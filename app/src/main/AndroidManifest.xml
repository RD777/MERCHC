<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ift3150.merchc" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainMenu"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoadingActivity"
            android:label="@string/title_activity_loading" >
        </activity>
        <activity
            android:name=".IslandActivity"
            android:label="@string/title_activity_island"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SimulationActivity"
            android:label="@string/title_activity_simulation" >
        </activity>
        <activity
            android:name=".MapActivity"
            android:label="@string/title_activity_map" >
        </activity>
        <activity
            android:name=".BMapActivity"
            android:label="@string/title_activity_bmap"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
